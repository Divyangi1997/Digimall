<section class="cart py-16">

    <% if(session.cart) { %>

    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="cart-black">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>

        <div class="product-list">
            <% for(let product of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img src="/img/<%= product.item.image %>" alt="flasks" class="w-24">
                <div class="flex-1 ml-4">
                    <h1><%= product.item.name %></h1>
                    <span><%= product.item.size %></span>
                </div>
                <span class="flex-1 ml-4"><%= product.qty %> Pcs</span>
                <span class="font-bold text-lg flex-1">₹<%= product.item.price * product.qty %></span>
                <button class="remove-from-cart py-1 px-6 rounded-full flex items-center font-bold">
                    <span>-</span>
                    <span class="ml-4">Remove</span>
                </button>
            </div>
            <% } %>
        </div>

        <hr>

        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">₹<%= session.cart.totalPrice %></span>
            </div>

            <div>
                <form action="/orders" method="POST" class="mt-12">
                    <input type="tel" name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone number">
                    <input type="text" name="address" class="border border-gray-400 p-2 w-1/2" placeholder="Address">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" 
                            type="submit">Order Now
                        </button>
                    </div>
                </form>
            </div>

            <a href="/login" 
                class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">
                Login to continue
            </a>
        </div>
    </div>  
    
    <% } else { %>

    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Your Digimall Basket is empty</h1>
            <p class="text-gray-500 text-lg mb-12">Shop today’s deals</p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div>  
    
    <% } %>
</section>