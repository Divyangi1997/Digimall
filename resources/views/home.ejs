<section class="hero">
    <div class="container mx-auto">
        <div>
            <img src="/img/scrolling3.png" alt="scrolling">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">Deals of the Day</h1>

    <div class="grid grid-cols-4 row-gap-16 col-gap-12">

        <% items.forEach(function(item){ %>

        <div class="w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= item.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= item.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= item.size %></span>

                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= item.price %></span>
                    <button data-item="<%= JSON.stringify(item) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>

        <% }) %>
    </div>
</section>